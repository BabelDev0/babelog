---
interface Props {
  title: string;
}
import logo from "../../public/logo.svg";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/babelog/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <a href="/babelog/ ">
      <div class="flex items-center justify-center my-32 w-full">
        <img class="w-80" src={logo.src} />
      </div>
    </a>
    <slot />
  </body>
</html>
<style is:global></style>
