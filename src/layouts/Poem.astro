---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title="poem" backUrl="/babelog/poetry">
  <div class="flex w-full justify-center items-center my-16">
    <h1 class="text-6xl font-flower">{frontmatter.title}</h1>
  </div>
  <div class="flex flex-col justify-center items-center">
    <div class="font-flower text-3xl">
      <!-- lg:[writing-mode:vertical-rl] -->
      <slot />
    </div>
  </div>
</Layout>
