---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title="poem" backUrl="/babelog/poems">
  <div class="flex w-full justify-center items-center my-16">
    <h1 class="text-6xl font-flower mx-10">{frontmatter.title}</h1>
  </div>
  <div class="flex flex-col justify-center items-center">
    <div class="font-flower text-3xl lg:w-1/3 md:w-2/3 w-10/12">
      <slot />
    </div>
  </div>
</Layout>
