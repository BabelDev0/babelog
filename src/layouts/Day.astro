---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title="day" backUrl="/babelog/days">
  <div class="flex w-full justify-center items-center my-16">
    <h1 class="text-5xl font-flower mx-10">{frontmatter.title}</h1>
  </div>
  <div class="flex flex-col justify-center items-center">
    <div class="font-flower lg:text-3xl text-xl mx-3">
      <slot />
    </div>
  </div>
</Layout>
